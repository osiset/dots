
###############
# Modifiers
###############
set $super Mod4
set $alt Mod1
set $ctl Control
set $wk1 "web"
set $wk2 "code"
set $wk3 "mail"
set $wk4 "misc"
set $wk5 "void"

###############
# Fonts
###############
font pango: Ubuntu 10

